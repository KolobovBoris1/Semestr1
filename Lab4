#include <iostream>
#include <cstdlib> // библиотека для rand()
#include <ctime>
using namespace std;

int main() {
    int n = 0;
    cout << "vvedite kol-vo elementov, >=5, <100" << endl;
    cin >> n;
    int arr[100] = {};
    srand(time(NULL));
    cout << "sformirovanniy massiv: ";
    for (int i = 0; i < n; i++) {
        arr[i] = rand(); // запись случайного числа
        cout << arr[i] << " ";
    }
    cout << endl << "massiv bez pervih 5 chisel: ";

    for (int g = 5; g<n; g++) { //цикл удаления первых 5 элементов
        arr[g-5] = arr[g];
        arr[g] = 0;
        cout << arr[g-5] << " ";

    }

    for (int j = n-5; j<n-2; j++) { //цикл добавления 3-х элементов в конец массива
        arr[j] = rand();
    }
    cout << endl << "massiv s dobavleniem 3 chisel: ";
    for (int t = 0; t<n-2; t++) { //вывод массива после выполнения заданий
        cout << arr[t] << " ";
    }
    return 0;
}
